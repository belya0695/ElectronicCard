@model EC.Web.Models.PostViewModel
@{
    ViewBag.Title = "AddPost";
    Layout = "~/Views/_EditorHeader.cshtml";
}

<div class="content">
    <h2 class="center-elements">AddPost</h2>
    @Html.ValidationSummary()
    @using (Html.BeginForm("AddPost", "Post"))
    {
        <label for="postName">Enter post name:</label>
        @Html.EditorFor(p => p.PostName)

        <input type="submit" value="Add" />
    }
</div>