@model IEnumerable<EC.Common.Models.Record>

@{
    Layout = null;
}
@if (Model.Count() != 0)
{
    foreach (var rec in Model)
    {
        <div class="record-text">
            <ul class="col-1">
                <li>Diagnosis</li>
                <li>Doctors Name (post)</li>
                <li>Date</li>
            </ul>
            <ul class="col-2">
                <li>@rec.diagnosisName</li>
                <li>@rec.doctorsFirstName @rec.doctorsLastName (@rec.doctorsPost)</li>
                <li>@rec.date</li>
            </ul>
        </div>
    }
}
else
{
    <div>No records found</div>
}
